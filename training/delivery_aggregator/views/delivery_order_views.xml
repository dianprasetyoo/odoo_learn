<odoo>
    <!-- List View -->
    <record id="view_delivery_order_list" model="ir.ui.view">
        <field name="name">delivery.order.list</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <list string="Delivery Orders">
                <field name="delivery_date"/>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="sale_order_id"/>
                <field name="trip"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_delivery_order_kanban" model="ir.ui.view">
        <field name="name">delivery.order.kanban</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" context="{'group_by': 'state:asc'}" default_order="state" group_create="false">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="delivery_date"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total_amount"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Customer:</strong>
                                            <field name="customer_id"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Date:</strong>
                                            <field name="delivery_date"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Trip:</strong>
                                            <field name="trip"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <strong>Product:</strong>
                                            <field name="product_id"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Qty:</strong>
                                            <field name="quantity"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <strong>Price:</strong>
                                            <field name="unit_price"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Total:</strong>
                                            <field name="total_amount"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'confirmed': 'info', 'delivered': 'success'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_delivery_order_search" model="ir.ui.view">
        <field name="name">delivery.order.search</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <search string="Search Delivery Orders">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="sale_order_id"/>
                <field name="delivery_date"/>
                <field name="trip"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="total_amount"/>
                <field name="state"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="From Sales" name="from_sales" domain="[('sale_order_id', '!=', False)]"/>
                <filter string="Manual" name="manual" domain="[('sale_order_id', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Sale Order" name="group_sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Delivery Date" name="group_date" context="{'group_by': 'delivery_date'}"/>
                    <filter string="Trip" name="group_trip" context="{'group_by': 'trip'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_delivery_order_form" model="ir.ui.view">
        <field name="name">delivery.order.form</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <form string="Delivery Order">
                <header>
                    <button name="action_confirm" invisible="state != 'draft'" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_deliver" invisible="state != 'confirmed'" string="Mark as Delivered" type="object" class="oe_highlight"/>
                    <button name="action_view_sale_order" invisible="not sale_order_id" string="View Sale Order" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" placeholder="Enter delivery order name..."/>
                    </group>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="sale_order_id"/>
                            <field name="delivery_date"/>
                            <field name="trip"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <field name="trip_info" readonly="1" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Grouped List View for Summary and Detail -->
    <record id="view_delivery_order_summary_detail" model="ir.ui.view">
        <field name="name">delivery.order.summary.detail</field>
        <field name="model">delivery.order</field>
        <field name="arch" type="xml">
            <list string="Delivery Orders Summary">
                <field name="delivery_date"/>
                <field name="customer_id"/>
                <field name="trip"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total_amount" sum="Total Amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_delivery_order" model="ir.actions.act_window">
        <field name="name">Delivery Orders</field>
        <field name="res_model">delivery.order</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first delivery order!
            </p>
        </field>
    </record>



    <!-- Action for Summary-Detail View -->
    <record id="action_delivery_order_summary_detail" model="ir.actions.act_window">
        <field name="name">Delivery Summary</field>
        <field name="res_model">delivery.order</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_delivery_order_summary_detail"/>
        <field name="context">{'group_by': ['delivery_date', 'customer_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No delivery orders found!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_delivery_aggregator"
              name="Delivery Management"
              sequence="100"/>

    <menuitem id="menu_delivery_order"
              name="Delivery Orders"
              parent="menu_delivery_aggregator"
              action="action_delivery_order"
              sequence="10"/>

    <menuitem id="menu_delivery_order_summary_detail"
              name="Delivery Summary"
              parent="menu_delivery_aggregator"
              action="action_delivery_order_summary_detail"
              sequence="15"/>
</odoo>