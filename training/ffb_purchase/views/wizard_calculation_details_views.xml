<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Calculation Details Form View -->
    <record id="view_wizard_calculation_details_form" model="ir.ui.view">
        <field name="name">wizard.calculation.details.form</field>
        <field name="model">wizard.calculation.details</field>
        <field name="arch" type="xml">
            <form string="Price Calculation Details">
                <sheet>
                    <div class="oe_title">
                        <h1>💰 Price Calculation Breakdown</h1>
                    </div>
                    
                    <group>
                        <group string="🏷️ Configuration">
                            <field name="product_name"/>
                            <field name="vendor_name"/>
                            <field name="pricing_method"/>
                            <field name="purchase_margin"/>
                        </group>
                        <group string="📅 Date Range">
                            <field name="date_range_days"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="📈 Calculation Results">
                            <field name="price_count"/>
                            <field name="base_price" widget="monetary"/>
                            <field name="margin_amount" widget="monetary"/>
                            <field name="final_price" widget="monetary"/>
                            <field name="profit_margin" widget="percentage"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="📋 Sale Order Details" name="sale_orders">
                            <field name="sale_order_line_ids" readonly="1">
                                <list string="Sale Order Lines">
                                    <field name="customer_name"/>
                                    <field name="order_name"/>
                                    <field name="order_date"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="quantity"/>
                                    <field name="subtotal" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
