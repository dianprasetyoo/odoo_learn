<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_purchase_daily_price_tree" model="ir.ui.view">
        <field name="name">purchase.daily.price.tree</field>
        <field name="model">purchase.daily.price</field>
        <field name="arch" type="xml">
            <list string="Purchase Daily Prices">
                <field name="name"/>
                <field name="product_id"/>
                <field name="supplier_id"/>
                <field name="date"/>
                <field name="unit_price" widget="monetary"/>
                <field name="currency_id"/>
                <field name="notes"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_purchase_daily_price_form" model="ir.ui.view">
        <field name="name">purchase.daily.price.form</field>
        <field name="model">purchase.daily.price</field>
        <field name="arch" type="xml">
            <form string="Purchase Daily Price">
                <header>
                    <button name="action_copy_to_next_day" type="object" string="Copy to Next Day" class="btn-secondary" icon="fa-copy"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" placeholder="Purchase Daily Price Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Product &amp; Supplier">
                            <field name="product_id" required="1"/>
                            <field name="supplier_id" required="1"/>
                        </group>
                        <group string="Price Information">
                            <field name="date" required="1"/>
                            <field name="unit_price" widget="monetary" required="1"/>
                            <field name="currency_id" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Add any additional notes here..." nolabel="1"/>
                    </group>
                    <group string="System Information" invisible="1">
                        <group string="Company">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_purchase_daily_price_search" model="ir.ui.view">
        <field name="name">purchase.daily.price.search</field>
        <field name="model">purchase.daily.price</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Daily Prices">
                <field name="name"/>
                <field name="product_id"/>
                <field name="supplier_id"/>
                <field name="date"/>
                <filter string="Today" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_purchase_daily_price" model="ir.actions.act_window">
        <field name="name">Purchase Daily Prices</field>
        <field name="res_model">purchase.daily.price</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_purchase_daily_price_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first purchase daily price!
            </p>
            <p>
                Manage daily prices for different product-supplier combinations.
                Set different prices for the same product and supplier on different dates.
                These prices will automatically apply to purchase orders.
            </p>
        </field>
    </record>

    <!-- Action for Creating New Purchase Daily Price -->
    <record id="action_purchase_daily_price_create" model="ir.actions.act_window">
        <field name="name">Create Purchase Daily Price</field>
        <field name="res_model">purchase.daily.price</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

</odoo>
